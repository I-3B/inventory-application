extends layout

block style
  link(rel="stylesheet", href="/stylesheets/list.css")
  
block content
  .banner-container
    h1.banner #{title}
    .buttons 
      a.edit(title="edit",href='#{category.url}/update')
      a.delete(title="delete",href="#{category.url}/delete") 
  ul.list 
    for item in items 
      li.list-item
        a(href=item.url)
          h3 #{item.name}
          p in stock: 
            span.colored #{item.stock}
          p price: 
            span.colored #{item.price}
