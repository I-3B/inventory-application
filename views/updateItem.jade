extends layout 

block style 
  link(rel="stylesheet", href="/stylesheets/form.css")
block content 
  form(method='post',action='#{url}/update')
    h3= title
    label(for="name") Component name:
    input#name(name='name',maxLength=100, type="text", placeholder="Intel i7-10750H...",value=( (JSON.stringify(item) === '{}') ? "" :item.name), required,autofocus)
    label(for="price") Component price: 
    input#price(name='price', type="number",placeholder="394.99",step="0.01", value=((JSON.stringify(item) === '{}') ? "" : item.price), required)
    label(for="stock") Component in stock: 
    input#stock(name='stock', type="number" ,placeholder="15",value=(JSON.stringify(item) === '{}') ? "" : item.stock) ,required)
    label(for="password") your password for this Component password: 
    input#password(name='password',maxLength=8, type="password" , required)
    if errors.length!==0
      ul.errors
        for error in errors
          if error.msg===undefined
            li *#{error}
          else 
            li *#{error.msg}
    input(type="submit",value="Update")


