extends layout 

block style 
  link(rel="stylesheet", href="/stylesheets/form.css")
block content 
  form(method='post',action="#{url}/delete")
    h3= title 
    label(for="password") your password for this item: 
    input#password(name='password', maxLength=8,type="password" , required ,autofocus)
    if errors.length!=0
      ul.errors
        for error in errors
          li *#{error}
    input(type="submit",value="Delete" )
    
